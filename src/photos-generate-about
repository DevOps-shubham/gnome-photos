[[ "$1" = "--header" ]] &&
    echo "#ifndef PHOTOS_ABOUT_DATA_H" &&
    echo "#define PHOTOS_ABOUT_DATA_H" &&
    echo "#include <glib.h>" &&
    echo "G_BEGIN_DECLS" &&
    echo "extern const gchar *PHOTOS_ARTISTS[];" &&
    echo "extern const gchar *PHOTOS_AUTHORS[];" &&
    echo "G_END_DECLS" &&
    echo "#endif" &&
    exit

echo "const gchar *PHOTOS_ARTISTS[] = {"
while read line; do
    [[ $(echo "$line" | cut -c1) = "#" ]] &&
        continue
    [[ ${#line} -eq 0 ]] &&
        continue
    echo "  \"$line\","
done < $2/ARTISTS
echo "  NULL"
echo "};"

echo "const gchar *PHOTOS_AUTHORS[] = {"
while read line; do
    [[ $(echo "$line" | cut -c1) = "#" ]] &&
        continue
    [[ ${#line} -eq 0 ]] &&
        continue
    echo "  \"$line\","
done < $2/AUTHORS
echo "  NULL"
echo "};"
